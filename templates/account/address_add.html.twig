{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - TOMOKI
{% endblock %}

{% block content %}
	<div class="container py-4">
		<h1 class="text-center mb-4">Gérer mes adresses</h1>
		<div class="text-center mb-4">
			<a href="{{ path('account') }}" class="btn btn-outline-info">Retour à votre compte</a>
		</div>
		<hr>

		{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
		<div class="row g-3">
			<div class="col-md-6">
				{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.company, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-12">
				{{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.postal, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.country, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="text-center mt-4">
			{{ form_row(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
