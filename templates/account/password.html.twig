{% extends 'base.html.twig' %}
{% block title %}Modifier mon mot de passe - Tomoki
{% endblock %}
{% block content %}
	<div class="container py-5">
		<h1>Modifier mon mot de passe</h1>
		<br>
		<a href="{{ path('account') }}">Retourner Ã  mon compte</a>
		<br>
		<hr>
		{{ form_start(form) }}
		<div class="mb-3">
			{{ form_row(form.oldPassword) }}
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				{{ form_row(form.firstName) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.lastName) }}
			</div>
		</div>
		<div class="mb-3">
			{{ form_row(form.email) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.newPassword) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.confirmNewPassword) }}
		</div>
		{{ form_end(form) }}
		<hr>
	</div>
{% endblock %}
