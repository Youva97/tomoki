{% block content %}
	<div class="row">
		<div class="col-md-5 mb-4 text-center p-2">
			<img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
		</div>
		<div class="col-md-7 mb-4 my-auto p-2">
			<h3>{{ product.name }}</h3>
			<p>{{ product.subtitle }}</p>
			<b>{{ (product.price / 100) | number_format(2) }}â‚¬</b>
			<hr>
			<p>{{ product.description | striptags('<br><p><strong><b><img>') | raw }}</p>
			<a href="{{ path('add_to_cart', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier
				<i class="fas fa-cart-plus"></i>
			</a>
			<a href="{{ path('products') }}" class="btn btn-secondary">Retour aux produits</a>
		</div>
	</div>
