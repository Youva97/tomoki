{% extends 'base.html.twig' %}

{% block title %}Connexion!
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card shadow-lg p-3 mt-5">
					<div class="card-body">
						{% if app.user %}
							<div class="alert alert-info">
								Vous êtes connecté en tant que
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}" class="alert-link">Déconnexion</a>
							</div>
						{% endif %}

						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						<form method="post" class="form-signin">
							<h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>

							<div class="form-group">
								<label for="inputEmail" class="form-label">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							</div>

							<div class="form-group">
								<label for="inputPassword" class="form-label">Mot de passe</label>
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="d-grid gap-2 mt-3">
								<button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
							</div>
						</form>
						<hr>
						<div class="text-center">
							<a href="{{path('reset_password')}}" class="btn btn-outline-success p-1 m-2">Mot de passe oublié</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
